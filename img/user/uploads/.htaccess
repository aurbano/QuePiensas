Options -Indexes
Options -ExecCGI
AddHandler cgi-script .php .php3 .php4 .phtml .pl .py .jsp .asp .htm .shtml .sh .cgi .html .jpeg

<filesMatch "noimage.png">
# Cache de 1 mes para la imagen de sin imagen
ExpiresDefault A2629743
Header append Cache-Control "public"
</filesMatch>

<filesMatch "\.(gif|png)$">
FileETag None
<ifModule mod_headers.c>
Header unset ETag
Header set Cache-Control "max-age=0, no-cache, no-store, must-revalidate"
Header set Pragma "no-cache"
Header set Expires "Wed, 11 Jan 1984 05:00:00 GMT"
</ifModule>
</filesMatch>

<Files ^(*.gif|*.png)>
order deny,allow
deny from all
</Files>

# ErrorDocs
ErrorDocument 400 /noimage.png
ErrorDocument 401 /noimage.png
ErrorDocument 403 /noimage.png
ErrorDocument 404 /noimage.png
ErrorDocument 500 /noimage.png